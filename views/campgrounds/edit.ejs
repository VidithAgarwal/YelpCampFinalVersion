<%- include("../partials/header") %>
<div class = "container">
	<div class = "row">
		<h1 style = "text-align: center">
			Edit <%= campground.name %>
		</h1>
		
		<div style = "width: 30%; margin: 30px auto">
			<form action = "/campgrounds/<%= campground._id %>?_method=PUT" method = "POST">
				<div class = "form-group">
					<input class = "form-control" value = "<%= campground.name %>" type = "text" name = "campground[name]" placeholder = "name">
				</div>
				<div class = "form-group">
					<input class = "form-control" value = "<%= campground.image %>"type = "text" name = "campground[image]" placeholder = "image url">
				</div>
				<div class = "form-group">
					<input class = "form-control" value = "<%= campground.description %>"type = "text" name = "campground[Description]" placeholder = "description">
				</div>
				<div class = "form-group">
					<input class = "btn btn-lg btn-primary btn-block" type = "submit">
				</div>
			</form>
			<a href = "/campgrounds">Go Back</a>
		</div>
	</div>
</div>
<%- include("../partials/footer") %>
